{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],                // Alias generico per tutta la root
      "@app/*": ["./app/*"],          // Alias per la cartella app
      "@context/*": ["./context/*"],  // Alias per la cartella context
      "@assets/*": ["./assets/*"]     // Alias per immagini, video e risorse
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
